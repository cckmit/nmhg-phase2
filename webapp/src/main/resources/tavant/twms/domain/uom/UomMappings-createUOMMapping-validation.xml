<!DOCTYPE validators PUBLIC
  "-//Apache Struts//XWork Validator 1.0.2//EN"
  "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="baseUom">
        <field-validator type="required" short-circuit="true">
            <message key="uom.addUom.baseUom.mandatory" />
        </field-validator>
    </field>       
    <field name="mappedUom">
        <field-validator type="requiredstring" short-circuit="true">        
            <message key="uom.addUom.mappedUom.mandatory" />
        </field-validator>
    </field>        
    <field name="mappingFraction">
        <field-validator type="required" short-circuit="true">
            <message key="invalid.fieldvalue.uomMappings.mappingFraction" />
        </field-validator>
        <field-validator type="long" short-circuit="true">
            <param name="min">1</param>
            <message key="invalid.fieldvalue.uomMappings.mappingFraction"/>
        </field-validator>
    </field>
  
</validators>
