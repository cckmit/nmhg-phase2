		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[!((ncr != null && ncr) && (ncrWith30Days != null && ncrWith30Days))]]></param>
			<message key="error.claim.bothNCR" />
		</field-validator>
	</field>
	
	<field name="inventoryClassFor30DayNcr">
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[!((inventoryClassFor30DayNcr != null) && 
			((claim.itemReference != null && claim.itemReference.referredInventoryItem != null 
            && !claim.itemReference.referredInventoryItem.type.getType().equals('RETAIL')) 
            ))]]></param>
			<message key="error.newClaim.ncrClaimWith30Days" />
		</field-validator>
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[!((inventoryClassFor30DayNcr != null)
			&& ((claim.itemReference.referredInventoryItem.deliveryDate!=null 
			&&!(claim.failureDate.isBefore(claim.itemReference.referredInventoryItem.deliveryDate.plusDays(30))))
              ))]]></param>
			<message key="error.newClaim.ncrClaim.daysCheck" />
		</field-validator>
	</field>
	
	<field name="reasonForServiceManagerRequest">
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression">
            	<![CDATA[
		            ((serviceManagerRequest == null || !serviceManagerRequest) &&
		            	(reasonForServiceManagerRequest == null || reasonForServiceManagerRequest.description == null 
		            		|| reasonForServiceManagerRequest.description.trim().length() == 0))
		            ||	
		            ((serviceManagerRequest != null && serviceManagerRequest) &&
		            	(reasonForServiceManagerRequest != null && reasonForServiceManagerRequest.description != null 
		            			&& reasonForServiceManagerRequest.description.trim().length() > 0))
		            ]]>
			</param>
			<message key="error.newClaim.smrReasonRequired" />
		</field-validator>
	</field>

